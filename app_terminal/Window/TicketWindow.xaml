<Window x:Class="app_terminal.Windows.TicketWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        Title="Ваш билет" Height="420" Width="400" MinHeight="300" MinWidth="300">
    <Grid Background="#F0F0F0">
        <StackPanel Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Text="Информация о билете"  
                       HorizontalAlignment="Center"/>

            <TextBlock FontSize="18" Text="{Binding TicketInfo}" TextAlignment="Center"   
                       Margin="0,0,0,10"/>

            <TextBlock FontSize="18" Text="QR Код:" Margin="0,20,0,10" HorizontalAlignment="Center"/>
            <Image x:Name="ImageQRCode" Width="200" Height="200" HorizontalAlignment="Center"/>

            <Button x:Name="PrintButton" Content="Распечатать" Width="100" Height="30" Margin="0,20,0,0"   
                    HorizontalAlignment="Center" Click="PrintButton_Click"/>
        </StackPanel>
    </Grid>
</Window>